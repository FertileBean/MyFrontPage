<script>
window.addEventListener ("load", function () {
	var input = document.getElementById('1');

	input.addEventListener("keydown", function () {
		//alert(this.selectionStart);
	});
});

function setInput(button) {
   var buttonVal = button.value;
   var textbox = document.getElementById('1');
   var pos = textbox.selectionStart;
   textbox.value = textbox.value.substring(0, pos) + buttonVal + textbox.value.substring(pos);
}
</script>

<input type="text" id="1" onfocus="getPosition"></input>
